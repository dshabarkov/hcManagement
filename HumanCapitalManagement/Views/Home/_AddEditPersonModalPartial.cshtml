@model HumanCapitalManagement.Models.PersonModel

<div class="modal fade" id="addEditPersonModal" role="dialog" aria-labelledby="addEditPersonModalLabel" aria-hidden="true"tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addEditPersonModalLabel">Person details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form id="personDataForm">
                    <input type="hidden" asp-for="Id" />

                    <label asp-for="FirstName">First name:</label><br>
                    <input type="text" asp-for="FirstName"><br>
                    <label asp-for="LastName">Last name:</label><br>
                    <input type="text" asp-for="LastName"><br>
                    <label asp-for="Salary">Salary:</label><br>
                    <input type="text" asp-for="Salary"><br>
                    <label asp-for="Department">Department:</label><br>
                    <input type="text" asp-for="Department">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="savePersonData()">Save changes</button>
            </div>
        </div>
    </div>
</div>
